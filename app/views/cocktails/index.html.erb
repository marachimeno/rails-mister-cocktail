<div class="container mt-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-4 rounded p-3">
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag cocktail.photo.key, class: "card-img-top rounded-top" %>
          <div class="card-body rounded-bottom d-flex justify-content-center">
            <p class="card-text"><%= link_to cocktail.name, cocktail_path(cocktail), class: "text-decoration-none" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
