<div class="row mx-md-n5">
  <div class="col px-md-5">
    <div class="p-3 mt-5">
      <h2 class="pb-2 text-center"><%= @cocktail.name %></h2>
      <% if @cocktail.photo.attached? %>
        <p class="pb-2 text-center">
          <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, class: "rounded" %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="col px-md-5 w-10">
    <div class="p-3 mt-5">
      <h3>Ingredients</h3>
      <% @cocktail.doses.each do |dose|%>
      <div class="card p-1 m-2">
        <div class="card-body">
          <%= dose.description %>  |  <%= dose.ingredient.name %>
          <%= link_to "Remove",
                      dose_path(dose),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="my-4 text-center">
  <%= link_to 'Add an ingredient to cocktail', new_cocktail_dose_path(@cocktail), class: "pr-4" %>
  <%= link_to 'Back to all cocktails', cocktails_path(@cocktail), class: "pl-4 pr-4" %>
  <%= link_to 'Add a review', new_cocktail_review_path(@cocktail), class: "pl-4" %>
</div>

<div class="reviews">
  <h3 class="ml-2">Reviews</h3>
  <div class="card p-1 m-2">
    <div class="card-body">
    <% @cocktail.reviews.each do |review| %>
      <%= review.content %>
    <% end %>
    </div>
  </div>
</div>
